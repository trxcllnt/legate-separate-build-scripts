#!/usr/bin/env bash

build_all() {
    set -ex;

    cd ~/;

    sccache --stop-server 2>/dev/null || SCCACHE_NO_DAEMON=1 sccache --show-stats;

    # clone-legion;
    clone-legate-core;
    clone-cunumeric;

    if type conda >/dev/null 2>&1; then
        . make-conda-env;
    fi

    build-legate-cpp;
    build-legate-wheel;
    build-legate-conda;

    build-cunumeric-cpp;
    build-cunumeric-wheel;
    build-cunumeric-conda;
}

(build_all "$@");
